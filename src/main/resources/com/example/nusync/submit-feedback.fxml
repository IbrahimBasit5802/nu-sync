<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" stylesheets="@feedback.css"  spacing="10" alignment="TOP_CENTER">
    <Label text="Submit Feedback"/>
    <TextArea fx:id="feedbackTextArea" promptText="Enter your feedback here"/>
    <Button text="Submit" onAction="#handleSubmitButton"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
